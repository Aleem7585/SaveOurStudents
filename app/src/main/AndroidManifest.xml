<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sos.saveourstudents" >


    <!--Mav View Permission -->
    <permission
        android:name="com.sos.saveourstudents.locationapi.maps.permission.MAPS_RECEIVE"
        android:protectionLevel="signature" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />


    <!--Mav View Permission -->
    <!--<uses-permission android:name="com.sos.saveourstudents.locationapi.maps.permission.MAPS_RECEIVE" /> -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <!-- G+ -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.USE_CREDENTIALS"/>
    <!-- GCM -->
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <permission android:name="com.example.gcm.permission.C2D_MESSAGE" android:protectionLevel="signature"/>
    <uses-permission android:name="com.example.gcm.permission.C2D_MESSAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!--G+ -->
        <meta-data android:name="com.google.android.gms.version" android:value="@integer/google_play_services_version"/><!-- FB -->
        <meta-data android:name="com.facebook.sdk.ApplicationId" android:value="@string/facebook_app_id"/>

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginActivity"
            android:label="SaveOurStudents">
            <intent-filter>
                <action android:name="android.intent.action.ALL_APPS"/><!--TODO: Unsure about what action/category to use -->
                <category android:name="android.intent.category.home"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".SignupActivity"
            android:label="SaveOurStudents">
            <intent-filter>
                <action android:name="android.intent.action.ALL_APPS"/><!--TODO: Unsure about what action/category to use -->
                <category android:name="android.intent.category.home"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ForgotLoginActivity"
            android:label="SaveOurStudents">
            <intent-filter>
                <action android:name="android.intent.action.ALL_APPS"/><!--TODO: Unsure about what action/category to use -->
                <category android:name="android.intent.category.home"/>
            </intent-filter>
        </activity>

        <!-- FB login-->
        <activity android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" android:label="@string/app_name"/>

        <!-- Map Key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/api_key" />

        <!-- GCM -->
        <receiver android:name="com.sos.saveourstudents.supportclasses.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter><action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <category android:name="com.sos.saveourstudents"/>
            </intent-filter>
        </receiver>
        <service android:name="com.sos.saveourstudents.supportclasses.GcmIntentService"/>


    </application>

</manifest>
