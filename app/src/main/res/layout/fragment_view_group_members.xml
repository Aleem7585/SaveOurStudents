<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context="com.sos.saveourstudents.ViewGroupMembersFragment">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/view_group_members_students_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:text="@string/view_group_members_students"
                android:textColor="@color/primary"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            <ListView
                android:id="@+id/view_group_members_students_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/view_group_members_students_title"
                android:layout_marginLeft="24dp"
                android:layout_below="@id/view_group_members_students_title">
            </ListView>

            <TextView
                android:id="@+id/view_group_members_tutors_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:layout_below="@id/view_group_members_students_listView"
                android:text="@string/view_group_members_tutors"
                android:textColor="@color/primary"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"/>

            <ListView
                android:id="@+id/view_group_members_tutors_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_alignLeft="@id/view_group_members_tutors_title"
                android:layout_below="@id/view_group_members_tutors_title">
            </ListView>


        </RelativeLayout>
    </android.support.v7.widget.CardView>

</ScrollView>
