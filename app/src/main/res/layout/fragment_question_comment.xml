<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="2sp" >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/question_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/defaultprofile" />


        <TextView
            android:id="@+id/question_name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/question_image"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/question_image"
            android:text="My Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/primary_dark"
            android:textIsSelectable="false" />

        <TextView
            android:id="@+id/question_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/question_name_text"
            android:layout_below="@+id/question_name_text"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:text="Let's have an all nighter in the dungeon! I'll grab my laptop and we can pair program"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/black" />


        <TextView
            android:id="@+id/question_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/question_name_text"
            android:layout_marginRight="8dp"
            android:text="3h"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/time_dist_hint" />

    </RelativeLayout>
</android.support.v7.widget.CardView>


