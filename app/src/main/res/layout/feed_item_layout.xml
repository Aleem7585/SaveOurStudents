<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/white"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2sp"
        card_view:cardUseCompatPadding="true">

        <com.andexert.library.RippleView xmlns:ripple="http://schemas.android.com/apk/res-auto"
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ripple:rv_color="@color/primary"
            ripple:rv_rippleDuration="150">
            <!--
                 <ImageView
                     android:id="@+id/question_image"
                     android:layout_width="50dp"
                     android:layout_height="50dp"
                     android:layout_marginLeft="5dp"
                     android:layout_marginTop="5dp"
                     android:layout_marginRight="5dp"
                     android:src="@mipmap/ic_launcher"/>
            -->
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/question_user_image"
                app:border_color="@color/light_primary"
                app:border_width="2dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/defaultprofile" />

            <com.sos.saveourstudents.supportclasses.CustomTextView
                android:id="@+id/question_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/question_user_image"
                android:text="My Name"
                android:textColor="@android:color/black"
                android:textIsSelectable="false"
                android:textSize="18sp"
                />

            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_user_image"
                android:layout_margin="5dp"
                android:ellipsize="end"
                android:text="If ghosts can walk through walls and glide down stairs, why don't they fall through the floor?"
                android:textColor="@android:color/black" />



            <com.sos.saveourstudents.supportclasses.CustomTextView
                android:id="@+id/question_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_name_text"
                android:layout_marginTop="1dp"
                android:layout_toRightOf="@+id/question_user_image"
                android:text="3 hours ago"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                />


            <com.sos.saveourstudents.supportclasses.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/question_timestamp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:text="150 m"
                android:textColor="@android:color/black"
                android:textSize="12sp"
                />


        </com.andexert.library.RippleView>
    </android.support.v7.widget.CardView>

</RelativeLayout>