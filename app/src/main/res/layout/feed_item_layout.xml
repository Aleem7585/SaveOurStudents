<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="2sp"
        card_view:cardUseCompatPadding="true" >

        <com.andexert.library.RippleView
            xmlns:ripple="http://schemas.android.com/apk/res-auto"
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ripple:rv_color="@color/primary"
            ripple:rv_rippleDuration="150">

     <ImageView
         android:id="@+id/question_image"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_marginLeft="5dp"
         android:layout_marginTop="5dp"
         android:layout_marginRight="5dp"
         android:src="@mipmap/ic_launcher"/>


    <TextView
        android:id="@+id/question_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="My Name"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_toRightOf="@+id/question_image"
        android:textIsSelectable="false" />

    <TextView
        android:id="@+id/question_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_below="@+id/question_image"
        android:layout_margin="5dp"
        android:text="If ghosts can walk through walls and glide down stairs, why don't they fall through the floor?"
        android:ellipsize="end" />


     <TextView
         android:id="@+id/question_timestamp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textColor="@android:color/black"
         android:layout_below="@+id/question_name_text"
         android:layout_marginTop="1dp"
         android:textSize="12sp"
         android:text="3 hours ago"
         android:layout_toRightOf="@+id/question_image"/>


      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="150 m"
          android:textColor="@android:color/black"
          android:layout_marginRight="5dp"
          android:layout_alignParentRight="true"
          android:textSize="12sp"
          android:layout_alignBottom="@+id/question_timestamp"
          />


        </com.andexert.library.RippleView>
    </android.support.v7.widget.CardView>
</RelativeLayout>