<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    tools:ignore="MergeRootFrame">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/login_screen_main_logo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@color/primary"
            android:paddingTop="@dimen/container_padding"
            android:src="@drawable/logo_placeholder" />


        <com.rey.material.widget.EditText xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/signup_first_name"
            style="@style/Material.Widget.EditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/first_name_hint"
            android:inputType="textCapSentences"
            android:paddingTop="14dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            app:et_autoCompleteMode="none"
            app:et_dividerColor="@color/primary_light"
            app:et_dividerErrorColor="#FFFF0000"
            app:et_dividerPadding="4dp"
            app:et_supportMaxChars="20"
            app:et_supportMode="3"
            app:et_supportTextErrorColor="#FFFF0000" />

        <com.rey.material.widget.EditText xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/signup_last_name"
            style="@style/Material.Widget.EditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_first_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="@string/last_name_hint"
            android:inputType="textCapSentences"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            app:et_autoCompleteMode="none"
            app:et_dividerColor="@color/primary_light"
            app:et_dividerErrorColor="#FFFF0000"
            app:et_dividerPadding="4dp"
            app:et_supportMaxChars="20"
            app:et_supportMode="3"
            app:et_supportTextErrorColor="#FFFF0000" />

        <com.rey.material.widget.EditText xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/signup_email_textfield"
            style="@style/Material.Widget.EditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_last_name"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/email_hint"
            android:inputType="textCapSentences"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            app:et_autoCompleteMode="none"
            app:et_dividerColor="@color/primary_light"
            app:et_dividerErrorColor="#FFFF0000"
            app:et_dividerPadding="4dp"
            app:et_helper="Please enter a valid email"
            app:et_supportMode="helper"
            app:et_supportTextErrorColor="#FFFF0000" />

        <com.rey.material.widget.EditText xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/signup_password_textfield"
            style="@style/Material.Widget.EditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_email_textfield"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/password_hint"
            android:inputType="textPassword"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            app:et_autoCompleteMode="none"
            app:et_dividerColor="@color/primary_light"
            app:et_dividerErrorColor="#FFFF0000"
            app:et_dividerPadding="4dp"
            app:et_helper="3-16 characters"
            app:et_supportMode="helper"
            app:et_supportTextErrorColor="#FFFF0000" />

        <com.rey.material.widget.EditText xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/signup_password_confirm_textfield"
            style="@style/Material.Widget.EditText.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/signup_password_textfield"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:hint="@string/repeat_password_hint"
            android:inputType="textPassword"
            android:paddingBottom="14dp"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/hint_text"
            app:et_autoCompleteMode="none"
            app:et_dividerColor="@color/primary_light"
            app:et_dividerErrorColor="#FFFF0000"
            app:et_dividerPadding="4dp"
            app:et_helper="Enter your password again"
            app:et_supportMode="helper"
            app:et_supportTextErrorColor="#FFFF0000" />

        <Button
            android:id="@+id/signup_btn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/signup_password_confirm_textfield"
            android:layout_centerHorizontal="true"
            android:paddingBottom="@dimen/abc_button_padding_vertical_material"
            android:paddingTop="@dimen/abc_button_padding_vertical_material"
            android:text="@string/sign_up" />

    </RelativeLayout>


</ScrollView>