<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    tools:ignore="MergeRootFrame">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:id="@+id/signup_confirm_signup_btn"
        android:layout_alignParentBottom="true"
        android:background="@color/primary_light"
        android:textSize="@dimen/textview_font_size"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_above="@id/signup_confirm_signup_btn"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <LinearLayout
                style="@style/SpacedElement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.rey.material.widget.EditText
                    android:inputType="textPersonName"
                    android:id="@+id/signup_username_textfield"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username_hint"
                    android:gravity="center"
                    />
                <!--
                app:et_dividerHeight="5dp"
                app:et_dividerColor="@color/primary_text"
                app:et_dividerErrorColor="@color/red"
                app:et_supportTextErrorColor="@color/red"
                app:et_supportMode="charCounter"
                app:et_supportMaxChars="4"
                -->

            </LinearLayout>

            <LinearLayout
                style="@style/SpacedElement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.rey.material.widget.EditText
                    android:inputType="textPersonName"
                    android:id="@+id/signup_password_textfield"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_hint"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                style="@style/SpacedElement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.rey.material.widget.EditText
                    android:inputType="textPersonName"
                    android:id="@+id/signup_password_confirm_textfield"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_password_hint"
                    android:gravity="center" />

            </LinearLayout>

            <LinearLayout
                style="@style/SpacedElement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <com.rey.material.widget.EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/signup_email_textfield"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/create_email_prompt"
                    android:gravity="center" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>