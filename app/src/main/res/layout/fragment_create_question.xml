<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white">


            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/question_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/defaultprofile"
                app:border_color="@color/primary_light"
                app:border_width="2dp"
                android:clickable="true"/>

            <TextView
                android:id="@+id/question_name_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="My Name"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_toRightOf="@+id/question_image"
                android:textIsSelectable="false" />

            <TextView
                android:id="@+id/question_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_below="@+id/question_image"
                android:layout_margin="5dp"
                android:text="Anyone wanna code? I'l be sitting over in the dungeon in B240 working on Rick's PA3"
                android:ellipsize="end" />


            <TextView
                android:id="@+id/question_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:layout_below="@+id/question_name_text"
                android:layout_marginTop="1dp"
                android:textSize="12sp"
                android:text="3 hours ago"
                android:layout_toRightOf="@+id/question_image"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="150 m"
                android:textColor="@android:color/black"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:layout_alignBottom="@+id/question_timestamp"
                />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/primary"
            android:layout_below="@+id/question_text"/>




    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/header_view"
        android:layout_above="@+id/comment_edittext"
        android:background="@android:color/white">

        <com.sos.saveourstudents.supportclasses.FlowLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:flowDirection="leftToRight"
            app:elementSpacing="4dp"
            app:lineSpacing="16dp"
            android:maxLines="50"
            android:gravity="center"
            android:id="@+id/flow_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="20dp"/>





    </ScrollView>

