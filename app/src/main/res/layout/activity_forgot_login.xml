
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    tools:context=".LoginActivity"
    tools:ignore="MergeRootFrame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/primary">

    <!--
        <android.support.v7.widget.Toolbar
            android:id="@+id/forgot_login_bar"
            android:layout_width="match_parent"
            android:layout_height="?android:attr/actionBarSize"
            android:background="@color/primary"
            android:minHeight="50sp"
            android:layout_alignParentTop="true"
            />
        -->

    <TextView
        android:id="@+id/forgot_credentials_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/forgot_credentials_prompt"
        android:textColor="@color/primary_text1"
        android:layout_above="@+id/forgot_login_email_textfield"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textSize="@dimen/textview_font_size"
        />

    <EditText
        android:id="@+id/forgot_login_email_textfield"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:hint="@string/email_hint"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        />

    <Button
        android:id="@+id/send_credentials_to_email_btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/send_email_prompt"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/textview_font_size"
        android:background="@color/primary_light"

        android:elevation="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/forgot_login_error_text"
        android:textColor="@color/red"
        android:layout_below="@+id/forgot_login_email_textfield"
        android:layout_centerHorizontal="true" />

</RelativeLayout>