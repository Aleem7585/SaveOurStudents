<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity"
    tools:ignore="MergeRootFrame">

    <ImageView
        android:src="@drawable/sinking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sign_up"
        android:id="@+id/signup_confirm_signup_btn"
        android:layout_alignParentBottom="true"
        android:background="@color/primary"
        android:textSize="@dimen/textview_font_size"/>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentTop="true"
        android:layout_above="@id/signup_confirm_signup_btn"
    >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            >

            <LinearLayout
                style="@style/SpacedElement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/signup_username_textfield"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/username_hint"
                    android:textColor="@color/primary_text1"
                    android:textColorHint="@color/primary_text1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_username_prompt"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@color/primary_text1"
                    android:textSize="15sp"/>

            </LinearLayout>

            <LinearLayout
                style="@style/SpacedElement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/signup_password_textfield"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_hint"
                    android:textColor="@color/primary_text1"
                    android:textColorHint="@color/primary_text1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_password_prompt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/primary_text1"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                style="@style/SpacedElement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:inputType="textPersonName"
                    android:id="@+id/signup_password_confirm_textfield"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/password_hint"
                    android:textColor="@color/primary_text1"
                    android:textColorHint="@color/primary_text1"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_password_confirmation_prompt"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="@color/primary_text1"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                style="@style/SpacedElement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/signup_email_textfield"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_hint"
                    android:textColor="@color/primary_text1"
                    android:textColorHint="@color/primary_text1"/>

                <TextView
                    android:textColor="@color/primary_text1"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_email_prompt"
                    android:textAppearance="?android:attr/textAppearanceSmall" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</RelativeLayout>